{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "admin",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/sdk/bin/admin",
      "args": ["build"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "phpcs",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/phpcs",
      "args": ["publish"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "install",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/install",
      "args": ["phpunit"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
